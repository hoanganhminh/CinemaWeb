@page
@model Cinema.Pages.Admin.MemberManagement.EditModel

@{
    ViewData["Title"] = "Quản lý thành viên";
}
<style>
    th, td {
        padding: 10px;
        padding-right: 50px;
    }

    table {
        margin: 0 auto;
    }

    h1 {
        width: fit-content;
        margin: 0 auto;
        margin-bottom: 30px;
    }

    p a {
        width: fit-content;
        margin-left: 50px;
    }
</style>
<div class="container">
    <div class="page">
        <div class="row">
            <div class="col-md-5">
                <div class="breadcrumbs">
                    <a asp-page="/index">Trang chủ</a>
                    <span>Quản lý thành viên</span>
                </div>
            </div>
            <div class="col-md-7">
                <a href="https://localhost:44320/Admin/RateManagement/Index">Quản lý đánh giá</a> -
                <a href="https://localhost:44320/Admin/MovieManagement/Index">Quản lý phim</a> -
                <a href="https://localhost:44320/Admin/MemberManagement/Index">Quản lý thành viên</a> -
                <a href="https://localhost:44320/Admin/GenreManagement/Index">Quản lý thể loại</a>
            </div>
        </div>
        <div style="padding: 15px 20px; border:2px solid black; border-radius:4%;">
            <h1>Quản lý thành viên</h1>

            <h4>Member</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Member.MemberId" disabled/>
                        <div class="form-group">
                            <label class="control-label">Họ và tên</label>
                            <input asp-for="Member.Fullname" class="form-control" disabled/>
                            <span asp-validation-for="Member.Fullname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Giới tính</label>
                            <input asp-for="Member.Gender" class="form-control" disabled/>
                            <span asp-validation-for="Member.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Member.Email" class="control-label"></label>
                            <input asp-for="Member.Email" class="form-control" disabled/>
                            <span asp-validation-for="Member.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Member.Password" class="control-label"></label>
                            <input type="password" asp-for="Member.Password" class="form-control" disabled/>
                            <span asp-validation-for="Member.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Trạng thái</label>
                            <input min="0" max="4" step="1" asp-for="Member.Type" class="form-control" />
                            <span asp-validation-for="Member.Type" class="text-danger"></span>
                            <p>Chon Type 2 de block member</p>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
