@page
@model Cinema.Pages.Admin.RateManagement.IndexModel

@{
    ViewData["Title"] = "Quản lý bình luận";
}
<style>
    th, td {
        padding: 10px;
        padding-right: 50px;
    }

    table {
        margin: 0 auto;
    }

    h1 {
        width: fit-content;
        margin: 0 auto;
        margin-bottom:30px;
    }

    p a {
        width: fit-content;
        margin-left: 50px;
    }
</style>
<div class="container">
    <div class="page">
        <div class="row">
            <div class="col-md-5">
                <div class="breadcrumbs">
                    <a asp-page="/index">Trang chủ</a>
                    <span>Quản lý bình luận</span>
                </div>
            </div>
            <div class="col-md-7">
                <a href="https://localhost:44320/Admin/RateManagement/Index">Quản lý đánh giá</a> -
                <a href="https://localhost:44320/Admin/MovieManagement/Index">Quản lý phim</a> -
                <a href="https://localhost:44320/Admin/MemberManagement/Index">Quản lý thành viên</a> -
                <a href="https://localhost:44320/Admin/GenreManagement/Index">Quản lý thể loại</a>
            </div>
        </div>
        <div style="padding: 15px 20px; border:2px solid black; border-radius:4%;">
            <h1>Quản lý bình luận</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Nội dung bình luận 
                        </th>
                        <th>
                            Đánh giá 
                        </th>
                        <th>
                            Thời gian đánh giá 
                        </th>
                        <th>
                            Hành động
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ var count = 0;
                        foreach (var item in Model.Rate)
                        {
                            var year = item.Time?.ToString("dd/MM/yyyy");
                            count++;
                            if(count == 10)
                            {
                                break;
                            }
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Comment)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rating)
                                </td>
                                <td>
                                    @year
                                </td>
                                <td>
                                    <a asp-page="./Details" asp-route-id="@item.MovieId">Thông tin</a> |
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>