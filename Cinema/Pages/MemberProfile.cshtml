@page
@model Cinema.Pages.MemberProfileModel
@{
    ViewData["Title"] = @Model.member.Fullname;
}
<div class="container">
    <div class="page">
        <div class="breadcrumbs">
            <div class="row">
                <div class="col-md-10">
                    <a asp-page="/Index">Trang chủ</a>
                    <span>@Model.member.Fullname</span>
                </div>
                <div class="col-md-2">
                    <a role="button" type="button" asp-page="/login" class="btn btn-dark">Đăng xuất</a>
                </div>
            </div>
        </div>
        
        <div class="row d-flex padding justify-content-center">
            <div class="card user-card-full">
                <div class="row m-l-0 m-r-0">
                    <div style="height:292px" class="col-sm-4 bg-c-lite-green user-profile">
                        <div class="card-block text-center text-white">
                            <div class="m-b-25">
                                <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                            </div>
                            <h6 class="f-w-600">@Model.member.Fullname</h6>
                            @if (Model.member.Type == 0)
                            {
                                <p class="font-weight-bold">Member thường </p>
                            }
                            else if (Model.member.Type == 3)
                            {
                                <p style="color:mistyrose" class="font-weight-bold">Member bạc</p>
                            }
                            else if (Model.member.Type == 4)
                            {
                            <p style="color:gold;" class="font-weight-bold">Member vàng</p>
                            }
                            <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="card-block">
                            <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Thông tin</h6>
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="m-b-10 f-w-600">Email</p>
                                    <h6 class="text-muted f-w-400">@Model.member.Email</h6>
                                </div>
                                <div class="col-sm-6">
                                    <p class="m-b-10 f-w-600">Giới tính</p>
                                    <h6 class="text-muted f-w-400">@Model.member.Gender</h6>
                                </div>
                            </div>
                            <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Đổi Mật Khẩu:</h6>
                            <form method="post">
                                <div class="row">
                                    <div class="col-sm-5">
                                        <p class="m-b-10 f-w-600">Nhập mật Khẩu cũ</p>
                                        <input type="password" name="oldPassword" required />
                                    </div>
                                    <div class="col-sm-5">
                                        <p class="m-b-10 f-w-600">Nhập mật Khẩu mới</p>
                                        <input type="password" name="newPassword" required />
                                    </div>
                                    <div class="col-sm-2">
                                        <p class="m-b-10 f-w-600"> </p>
                                        <button type="submit" class="btn btn-dark">Thay đổi</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
