@page
@model Cinema.Pages.RegisterModel
@{
    ViewData["Title"] = "Đăng Ký";
}
<div class="container">
    <div class="page">
        <div class="breadcrumbs">
            <a asp-page="/index">Trang chủ</a>
            <span>Đăng ký</span>
        </div>
        <form class="login" method="post">
            <p style="color:red">@Model.mes</p>
            <h2 class="text-dark">Đăng Ký</h2>
            <input type="text" name="fullname" placeholder="Họ và tên" required>
            <div class="row">
                <label class="col-md-4" for="gender">Male</label>
                <input class="col-md-8" style="width:auto; margin:0; padding:0" type="radio" name="gender" value="male" />
            </div>
            <div class="row">
                <label class="col-md-4" for="gender">Female</label>
                <input class="col-md-8" style="width: auto; margin: 0; padding: 0" type="radio" name="gender" value="female">
            </div>
            <input type="email" name="email" placeholder="Tài khoản" required>
            <input type="password" name="password" placeholder="Mật khẩu" required>
            <input type="password" name="re-password" placeholder="Nhập lại mật khẩu" required>
            <button type="submit">Đăng ký</button>
            <hr />
            <p>Đã có tài khoản? <a asp-page="/Login">Đăng nhập</a> ngay!</p>
        </form>
    </div>
</div>

<style>
    h2 {
        margin: 0 auto;
    }

    .login {
        margin: 0 auto;
        overflow: hidden;
        background-color: white;
        padding: 40px 30px 30px 30px;
        border-radius: 10px;
        /*position: absolute;*/
        top: 50%;
        left: 50%;
        width: 400px;
        box-shadow: 5px 10px 10px rgba(2, 128, 144, 1);
    }

        .login::before::before, .login::after::after {
            content: '';
            /*position: absolute;*/
            width: 600px;
            height: 600px;
            border-top-left-radius: 40%;
            border-top-right-radius: 45%;
            border-bottom-left-radius: 35%;
            border-bottom-right-radius: 40%;
            z-index: -1;
        }

        .login::before {
            background-color: rgba(69, 105, 144, 1);
        }

        .login::after {
            background-color: rgba(2, 128, 144, 1);
        }

        .login input {
            font-family: 'Asap', sans-serif;
            display: block;
            border-radius: 5px;
            font-size: 16px;
            background: white;
            width: 100%;
            border: 0;
            padding: 10px 10px;
            margin: 15px -10px;
        }

        .login button {
            font-family: 'Asap', sans-serif;
            cursor: pointer;
            color: #fff;
            font-size: 16px;
            text-transform: uppercase;
            width: 120px;
            border: 0;
            padding: 10px 0;
            margin-top: 10px;
            margin-left: -5px;
            border-radius: 5px;
            background-color: #ffc63c;
        }

            .login button:hover {
                background-color: #ffc63c;
            }
</style>

